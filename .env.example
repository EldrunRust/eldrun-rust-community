# ===========================================
# ELDRUN - Environment Configuration
# ===========================================
# Copy this file to .env.local for development
# Copy this file to .env.production for production
# NEVER commit .env files with real secrets!

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://user:password@localhost:5432/eldrun_db"

# ===========================================
# AUTHENTICATION
# ===========================================
# Generate a secure JWT secret with: openssl rand -base64 64
# IMPORTANT: Use a unique, random string in production!
JWT_SECRET="GENERATE_A_SECURE_64_CHAR_SECRET_HERE_DO_NOT_USE_DEFAULT"

# Session settings
SESSION_DURATION_DAYS=7

# ===========================================
# OAUTH PROVIDERS (Optional)
# ===========================================
# Steam OAuth
STEAM_API_KEY=""
STEAM_REALM="https://eldrun.lol"
STEAM_RETURN_URL="https://eldrun.lol/api/auth/steam/callback"

# Discord OAuth
DISCORD_CLIENT_ID=""
DISCORD_CLIENT_SECRET=""
DISCORD_REDIRECT_URI="https://eldrun.lol/api/auth/discord/callback"

# Discord Bot (for webhooks, role sync, etc.)
DISCORD_BOT_TOKEN=""
DISCORD_GUILD_ID=""
DISCORD_BOT_API_KEY=""  # For server-to-server auth

# Discord Webhook URLs
DISCORD_WEBHOOK_GENERAL=""
DISCORD_WEBHOOK_ANNOUNCEMENTS=""
DISCORD_WEBHOOK_MODERATION=""
DISCORD_WEBHOOK_SHOP=""
DISCORD_WEBHOOK_FORUM=""

# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# ===========================================
# SERVER SETTINGS
# ===========================================
NEXT_PUBLIC_SITE_URL="https://eldrun.lol"
NEXT_PUBLIC_API_URL="https://api.eldrun.lol"

# Rust Server Connection
RUST_SERVER_IP="play.eldrun.lol"
RUST_SERVER_PORT="28015"
RUST_RCON_PASSWORD=""
RUST_RCON_PORT="28016"
RCON_ENABLED="false"  # Set to true to enable real RCON
NEXT_PUBLIC_SERVER_IP="play.eldrun.lol"
SERVER_API_KEY=""  # For server-to-website communication

# ===========================================
# EMAIL (f端r Kontaktformulare & Benachrichtigungen)
# ===========================================
# Ohne SMTP-Konfiguration werden Emails im Development-Modus 端bersprungen
# Empfohlene Provider: SendGrid, Mailgun, AWS SES, oder eigener SMTP-Server
#
# Beispiel f端r Gmail:
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_SECURE="false"
#
# Beispiel f端r SendGrid:
# SMTP_HOST="smtp.sendgrid.net"
# SMTP_PORT="587"
# SMTP_USER="apikey"
# SMTP_PASSWORD="your-sendgrid-api-key"
#
SMTP_HOST=""
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@eldrun.lol"
CONTACT_EMAIL="support@eldrun.lol"

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Analytics (optional)
NEXT_PUBLIC_GA_ID=""

# Error Tracking - Sentry (optional)
# Get DSN from: https://sentry.io
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""

# ===========================================
# PAYMENT GATEWAYS
# ===========================================
# Stripe - https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# PayPal - https://developer.paypal.com
PAYPAL_CLIENT_ID=""
PAYPAL_CLIENT_SECRET=""
PAYPAL_MODE="sandbox"  # 'sandbox' or 'live'

# ===========================================
# RCON (Rust Server Remote Console)
# ===========================================
RCON_ENABLED="false"
RCON_HOST="localhost"
RCON_PORT="28016"
RCON_PASSWORD=""

# ===========================================
# STREAMING APIs (optional)
# ===========================================
# Twitch - https://dev.twitch.tv/console
TWITCH_CLIENT_ID=""
TWITCH_CLIENT_SECRET=""

# YouTube Data API - https://console.cloud.google.com
YOUTUBE_API_KEY=""

# ===========================================
# ADMIN
# ===========================================
# Default admin credentials (change immediately!)
ADMIN_EMAIL="admin@eldrun.lol"
# Generate secure password and hash it
ADMIN_PASSWORD_HASH=""

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# ===========================================
# SIMULATION & DEMO MODE
# ===========================================
# CRITICAL: These flags control simulated data generation.
# In PRODUCTION, all must be "false" - NEVER simulate real data!
# 
# DEMO_MODE: Shows demo banners, enables demo features
# SIMULATION_MODE: Generates fake activity (chat, events, heatmap)
# SEED_MODE: Allows database seeding with sample content

# Enable demo mode (shows banners, demo features)
DEMO_MODE="false"

# Enable simulation of live activity (NEVER in production!)
SIMULATION_MODE="false"

# Allow seeding database with sample content
SEED_MODE="false"

# Simulation intensity (1-10, affects activity frequency)
SIMULATION_INTENSITY="5"

# Simulation modules (comma-separated: server,heatmap,chat,forum,events)
SIMULATION_MODULES="server,heatmap,chat"

# ===========================================
# ELDRUN MOD INTEGRATION
# ===========================================
# Path to EldrunMod folder for config import
ELDRUN_MOD_PATH="C:/Users/Shadow/Documents/EldrunMod"

# Auto-sync changelog from mod updates
ELDRUN_AUTO_CHANGELOG="true"

# ===========================================
# REDIS (Optional - for realtime features)
# ===========================================
# Required for: Live chat, Heatmap updates, Server status
REDIS_URL=""
REDIS_ENABLED="false"

# ===========================================
# BACKGROUND JOBS (Optional)
# ===========================================
# Queue system for scheduled tasks
QUEUE_ENABLED="false"
QUEUE_REDIS_URL=""

# ===========================================
# AI SERVICES
# ===========================================
# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS="2048"
OPENAI_TEMPERATURE="0.7"

# ===========================================
# VOICE CHAT
# ===========================================
# WebRTC signaling server
VOICE_CHAT_SIGNALING_URL="wss://api.eldrun.lol/voice-chat/signaling"
VOICE_CHAT_STUN_SERVER="stun:stun.l.google.com:19302"
VOICE_CHAT_TURN_SERVER=""
VOICE_CHAT_TURN_USERNAME=""
VOICE_CHAT_TURN_CREDENTIAL=""

# ===========================================
# VIDEO PROCESSING
# ===========================================
# FFmpeg or cloud service for clip generation
VIDEO_PROCESSING_SERVICE="local"
VIDEO_PROCESSING_API_KEY=""
VIDEO_STORAGE_URL="https://cdn.eldrun.lol/clips"
VIDEO_MAX_DURATION="300"
VIDEO_MAX_SIZE="500MB"

# ===========================================
# ANALYTICS
# ===========================================
# Analytics database or service
ANALYTICS_DB_URL=""
ANALYTICS_RETENTION_DAYS="90"
ANALYTICS_SAMPLE_RATE="1.0"

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable major features
FEATURE_CASINO="true"
FEATURE_AUCTION="true"
FEATURE_TRADING="true"
FEATURE_BATTLEPASS="true"
FEATURE_HEATMAP="true"
FEATURE_CHAT="true"
FEATURE_STREAMS="true"
# AAA Features
FEATURE_AI_MODERATION="true"
FEATURE_AI_ASSISTANT="true"
FEATURE_MAP_EDITOR="true"
FEATURE_CLIP_GENERATOR="true"
FEATURE_VOICE_CHAT="true"
FEATURE_ANALYTICS="true"

# ===========================================
# DEVELOPMENT
# ===========================================
# Development SQLite database (for local dev)
# DATABASE_URL="file:./dev.db"

# Enable debug logging
DEBUG_MODE="false"
LOG_LEVEL="info"
